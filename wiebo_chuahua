class Msg(object):
    def __init__(self, m=''):
        self.str_msg = m
        self.message()

    # noinspection PyMethodMayBeStatic
    def get_sendnotify(self):
        if not os.path.exists("sendNotify.py"):
            cur_path = os.getcwd()
            print(f"æœªæ‰¾åˆ°é€šçŸ¥ä¾èµ–æ–‡ä»¶,å°†äºè„šæœ¬æ‰§è¡Œç›®å½•({cur_path})æ–°å»º:sendNotify.py (urlä¸ºhttps://sendNotify.py)")
            try:
                url = 'https://raw/sendNotify.py'
                response = requests.get(url)
                with open('sendNotify.py', "w+", encoding="utf-8") as f:
                    f.write(response.text)
            except Exception as err:
                print(err)
        else:
            print("æ–‡ä»¶å·²å­˜åœ¨,è·³è¿‡")
            pass
        pass

    def message(self):
        global msg_info
        print(self.str_msg)
        try:
            # msg_info = ''
            msg_info = f"{msg_info}\n{self.str_msg}"
        except Exception as err:
            print(err)
            msg_info = "{}".format(self.str_msg)
        sys.stdout.flush()
        # è¿™ä»£ç çš„ä½œç”¨å°±æ˜¯åˆ·æ–°ç¼“å†²åŒºã€‚
        # å½“æˆ‘ä»¬æ‰“å°ä¸€äº›å­—ç¬¦æ—¶ ,å¹¶ä¸æ˜¯è°ƒç”¨printå‡½æ•°åå°±ç«‹å³æ‰“å°çš„ã€‚ä¸€èˆ¬ä¼šå…ˆå°†å­—ç¬¦é€åˆ°ç¼“å†²åŒº ,ç„¶åå†æ‰“å°ã€‚
        # è¿™å°±å­˜åœ¨ä¸€ä¸ªé—®é¢˜ ,å¦‚æœä½ æƒ³ç­‰æ—¶é—´é—´éš”çš„æ‰“å°ä¸€äº›å­—ç¬¦ ,ä½†ç”±äºç¼“å†²åŒºæ²¡æ»¡ ,ä¸ä¼šæ‰“å°ã€‚å°±éœ€è¦é‡‡å–ä¸€äº›æ‰‹æ®µã€‚å¦‚æ¯æ¬¡æ‰“å°åå¼ºè¡Œåˆ·æ–°ç¼“å†²åŒºã€‚

    def main(self):
        global send
        cur_path = os.getcwd()
        # print(cur_path)
        if os.path.exists(cur_path + "/sendNotify.py"):
            # noinspection PyBroadException
            try:
